#:kivy 2.1.0

#:import NoTransition kivy.uix.screenmanager.NoTransition
#:include screen_splash.kv
#:include screen_standby.kv
#:include screen_dashboard.kv
#:include screen_data.kv


ScreenManager:
    id: screen_manager
    transition: NoTransition()
    Screen:
        name: 'screen_splash'
        ScreenSplash:
            app_window: app
            screen_manager: screen_manager
            screen_setting: screen_standby

    Screen:
        name: 'screen_standby'
        ScreenStandby:
            id: screen_standby
            screen_manager: screen_manager

    Screen:
        name: 'screen_dashboard'
        ScreenDashboard:
            id: screen_dashboard
            screen_manager: screen_manager

    Screen:
        name: 'screen_data'
        ScreenData:
            id: screen_data
            screen_manager: screen_manager
         

                  
