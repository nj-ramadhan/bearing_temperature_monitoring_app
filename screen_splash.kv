#:kivy 2.1.0

<ScreenSplash>:
    MDBoxLayout:
        orientation: 'vertical'
        padding: 100
        MDLabel:
            text: 'BEARING TEMPERATURE MONITORING'
            halign: 'center'
            valign: 'middle'
            font_style: 'H3'
            bold: True
            theme_text_color: 'Primary'
            size_hint_y: 0.2

        MDBoxLayout:
            orientation: 'horizontal'
            halign: 'center'
            valign: 'middle'
            padding: 40
            spacing: 100
            size_hint_y: 0.4
            
            Image:
                id: logo_kai
                source:'asset/logo_kai.png'
                size_hint_y: 0.6
                allow_stretch: True

            Image:
                id: logo_polman
                source:'asset/logo_polman.png'
                size_hint_y: 0.6
                allow_stretch: True

        MDProgressBar:
            id: progress_bar
            padding: 100
            max: 100
            value: 1
            size_hint_y: 0.04

        MDLabel:
            id: progress_bar_label
            text: 'Loading.. [0 %]'
            halign: 'center'
            valign: 'middle'
            font_style: 'H4'
            theme_text_color: 'Primary'
            bold: 'true'
            size_hint_y: 0.1

        MDLabel:
            text: 'Developed by Polman Bandung Copyrights @2024'
            halign: 'center'
            valign: 'middle'
            font_style: 'H5'
            theme_text_color: 'Primary'
            size_hint_y: 0.1