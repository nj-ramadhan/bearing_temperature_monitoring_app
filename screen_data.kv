#:kivy 2.1.0

<ScreenData>:
    MDBoxLayout: #main screen
        orientation: "vertical"

        MDBoxLayout: #header layout
            id: header_layout
            orientation: "horizontal"
			halign: 'center'
			padding: 20
            size_hint_y: 0.1

			MDFillRoundFlatIconButton: #shutdown button
				id: bt_shutdown
				icon: 'power'
				text: ' '
				md_bg_color: '#A50000'
				font_size: 40
				on_press: root.exec_shutdown()
				size_hint_x: 0.1

			MDLabel: #title label
				id: title            
				text: "BEARING TEMPERATURE MONITORING"
				halign: 'center'
				font_style: 'H5'
				theme_text_color: 'Primary'
				bold: True
				size_hint_x: 0.7
                    
            Image: #icon logo 1
                id: logo_kai
                source:'asset/logo_kai.png'
                allow_stretch: True
				size_hint_x: 0.1

            Image: #icon logo 2
                id: logo_polman
                source:'asset/logo_polman.png'
                allow_stretch: True           
				size_hint_x: 0.1   
		
		MDBoxLayout: #data layout
			id: layout_data
			orientation: "vertical"
			padding:20
			spacing:20
			size_hint_y: 0.7

			AnchorLayout:
				id: layout_tables
				size_hint_y: 0.6

			MDBoxLayout: #data layout
				orientation: "horizontal"
				spacing:20
				size_hint_y: 0.4

				MDBoxLayout: #data layout
					id: layout_graph

				MDBoxLayout: #data layout
					orientation: "vertical"
					spacing:20
					size_hint_x: 0.2

					MDTextField:
						id: text_bearing_num
						input_filter: 'int'
						hint_text: "Bearing Number"
						helper_text: "Choose bearing number"
						input_type: 'number'
						on_text_validate: root.update_bearing_num()
					
					# MDDropDownItem:
					# 	id: drop_item_bearing_num
					# 	text: 'Bearing Number'
					# 	on_release: root.update_bearing_num()
					# 	set_item:[1,2,3,4,5,6,7,8]

					MDLabel:
						text: 'Bearing Temperature'
						halign: 'center'
						font_style: 'H5'
						theme_text_color: 'Primary'
						bold: True
											
					MDLabel:
						id: label_bearing_temp
						text: ''
						halign: 'center'
						font_style: 'H2'
						theme_text_color: 'Primary'
						bold: True	
				
		MDBoxLayout: #interfacing layout
			orientation: "horizontal"
			padding: 20, 0
			spacing: 20
			size_hint_y: 0.1

			MDFillRoundFlatIconButton:
				id: bt_reset_data
				icon: 'file'
				text: "OPEN DATA"
				font_style: 'Button'
				size_hint_x: 0.4
				on_press: root.open_data()

			MDFillRoundFlatIconButton:
				id: bt_save_data
				icon: "content-save"
				text: "SAVE DATA"
				font_style: 'Button'
				size_hint_x: 0.4
				on_press: root.save_data()

		MDBoxLayout: #navigation layout
			orientation: "horizontal"
			padding: 20
			spacing: 20
			size_hint_y: 0.1

			# MDFillRoundFlatIconButton:
			# 	id: bt_screen_standby
			# 	icon: 'timer-sand'
			# 	text: "STANDBY"
			# 	font_style: 'Button'
			# 	size_hint_x: 0.25
			# 	on_press: root.screen_standby()

			MDFillRoundFlatIconButton:
				id: bt_screen_dashboard
				icon: "view-dashboard"
				text: "DASHBOARD"
				font_style: 'Button'
				size_hint_x: 0.5
				on_press: root.screen_dashboard()

			MDFillRoundFlatIconButton:
				id: bt_screen_data
				icon: "pencil"
				text: "DATA"
				font_style: 'Button'
				size_hint_x: 0.5
				on_press: root.screen_data()