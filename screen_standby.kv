#:kivy 2.1.0

<ScreenStandby>:
    MDBoxLayout: #main screen
        orientation: "vertical"

        MDBoxLayout: #header layout
            id: header_layout
            orientation: "horizontal"
			halign: 'center'
			padding: 20
            size_hint_y: 0.1

			MDFillRoundFlatIconButton: #shutdown button
				id: bt_shutdown
				icon: 'power'
				text: ' '
				md_bg_color: '#A50000'
				font_size: 40
				on_press: root.exec_shutdown()
				size_hint_x: 0.1

			MDLabel: #title label
				id: title            
				text: "BEARING TEMPERATURE MONITORING"
				halign: 'center'
				font_style: 'H5'
				theme_text_color: 'Primary'
				bold: True
				size_hint_x: 0.7
                    
            Image: #icon logo 1
                id: logo_kai
                source:'asset/logo_kai.png'
                allow_stretch: True
				size_hint_x: 0.1

            Image: #icon logo 2
                id: logo_polman
                source:'asset/logo_polman.png'
                allow_stretch: True           
				size_hint_x: 0.1   
		
		MDBoxLayout: #standby layout
			id: layout_standby
			orientation: "vertical"
			halign: 'center'
			valign: 'middle'
			size_hint_y: 0.8

			Image:
				id: kereta
                source:'asset/kereta.png'
                allow_stretch: True 
				size_hint_y: 1

		MDBoxLayout: #navigation layout
			orientation: "horizontal"
			padding: 20
			spacing: 20
			size_hint_y: 0.1

			MDFillRoundFlatIconButton:
				id: bt_screen_standby
				icon: 'timer-sand'
				text: "STANDBY"
				font_style: 'Button'
				size_hint_x: 0.25
				on_press: root.screen_standby()

			MDFillRoundFlatIconButton:
				id: bt_screen_dashboard
				icon: "view-dashboard"
				text: "DASHBOARD"
				font_style: 'Button'
				size_hint_x: 0.25
				on_press: root.screen_dashboard()

			MDFillRoundFlatIconButton:
				id: bt_screen_data
				icon: "pencil"
				text: "DATA"
				font_style: 'Button'
				size_hint_x: 0.25
				on_press: root.screen_data()
