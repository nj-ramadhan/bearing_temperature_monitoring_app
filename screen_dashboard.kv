#:kivy 2.1.0

<ScreenDashboard>:
    MDBoxLayout: #main screen
        orientation: "vertical"
		id: layout_dashboard

        MDBoxLayout: #header layout
            id: header_layout
            orientation: "horizontal"
			halign: 'center'
			padding: 20
            size_hint_y: 0.1

            Image: #icon logo 1
                id: logo_kai
                source:'asset/logo_kai.png'
                allow_stretch: True
				size_hint_x: 0.1

            Image: #icon logo 2
                id: logo_polman
                source:'asset/logo_polman.png'
                allow_stretch: True           
				size_hint_x: 0.1   

			MDLabel: #title label
				id: title            
				text: "BEARING TEMPERATURE MONITORING"
				halign: 'center'
				font_style: 'H4'
				theme_text_color: 'Primary'
				bold: True
				size_hint_x: 0.7

			MDFillRoundFlatIconButton: #shutdown button
				id: bt_shutdown
				icon: 'power'
				text: ' '
				md_bg_color: '#A50000'
				font_size: 30
				on_press: root.exec_shutdown()
				size_hint_x: 0.1

        MDBoxLayout: #realtime clock layout
            id: realtime_clock_layout
            orientation: "horizontal"
			valign: 'bottom'
			padding: 20
			size_hint_y: 0.02
			
			MDLabel:
				id: lb_train_name
				font_style: 'H6'

			MDLabel:
				id: lb_train_dir
				font_style: 'H6'

			MDLabel:
				id: lb_train_type
				font_style: 'H6'

			MDLabel:
				id: lb_train_wheel
				font_style: 'H6'

			MDLabel:
				id: lb_train_speed
				font_style: 'H6'

			MDLabel:
				id: lb_realtime_clock
				font_style: 'H6'
				halign: 'right'

		MDRelativeLayout: #graph layout
			padding: 20
			size_hint_y: 0.68
			Image:
				id: background_image
                source:'asset/train_standby.png'
                allow_stretch: True 
				size_hint_y: 0.95
				pos_hint: {'center_x': 0.5,'center_y': 0.5}

			MDRelativeLayout: 
				id: layout_text_temps
				pos_hint: {'center_x': 1,'center_y': 0.5}

