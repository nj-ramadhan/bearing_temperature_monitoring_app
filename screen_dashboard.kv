		# 		text: "TRAIN MOVERIGHT"
		# 		font_style: 'Button'
		# 		size_hint_x: 0.4
		# 		on_press: root.move_right()

		MDBoxLayout: #navigation layout
			orientation: "horizontal"
			padding: 20
			spacing: 20
			size_hint_y: 0.2

			# MDFillRoundFlatIconButton:
			# 	id: bt_screen_standby
			# 	icon: 'timer-sand'
			# 	text: "STANDBY"
			# 	font_style: 'Button'
			# 	size_hint_x: 0.25
			# 	on_press: root.screen_standby()

			MDFillRoundFlatIconButton:
				id: bt_screen_dashboard
				icon: "view-dashboard"
				text: "DASHBOARD"
				font_style: 'Button'
				size_hint_x: 0.5
				on_press: root.screen_dashboard()

			MDFillRoundFlatIconButton:
				id: bt_screen_data
				icon: "pencil"
				text: "DATA"
				font_style: 'Button'
				size_hint_x: 0.5
